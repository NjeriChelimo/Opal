<%= error_messages_for :category  %>
<% content_for :side do %>
		<div class="box_2">
				<h2 class="title">
					<%= icon(:categories) %>
					<%= f.label :category_id  %>
				</h2>	
				<%= category_select_tag("category[category_id]", category.category_id, :id_to_ignore => category.id, :include_blank => true) %>																					
			</div>			
<% end %>
<%= content_tag :div, :class => :field do %>
	<%= content_tag :div, f.label(:name), :class => :label %> 
	<%= f.text_field :name %>
<% end %>

<%= content_tag :div, :class => :field do %>
	<%= content_tag :div, f.label(:description), :class => :label %> 
	<%= f.text_field :description %>
<% end %>
