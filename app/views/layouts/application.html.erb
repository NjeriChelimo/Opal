<%= initialize_layout -%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">	
<html>
	<head>
		<%= render :partial => "head" %>
	</head>

	<body>
		<div id="wrapper">
			<%= render :partial => "top" %>				    
			<%= render :partial => "header" %>
			<div id="content" class="<%= content_for?(:side) ? 'split-two' : 'split-one' %>">
				<div id="content-inner"> 
					<%= render_flash %>
					<%= render :partial => "banner_top" %>		 		 
					<%= content_tag :div, :id => :side  do %>
					 	<%= yield :side %>			 	
					<% end if content_for? :side %>
					 	
					<%= content_tag :div, :id => :main do %>
						<%= yield %>
					<% end %>		     

			 		<div class="clear"></div>		
			 		<%= render :partial => "banner_bottom" %>
			 	</div>
			</div>
			<div id="footer">
				<div id="footer-inner">
					<%= show_page Page.system.find_by_name("website_bottom") %>
					<%= render :partial => "footer" %>
				</div>
			</div>
		</div>
	</body>
</html>
