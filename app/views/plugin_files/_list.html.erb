<% if PluginFile.can?(@logged_in_user, :view) %>
	<div class="item_files_box">
		<% files_count = PluginFile.record(item).approved.count  %>
		<% if files_count > 0 %>
			<%= link_to url_for(:action => "view", :controller => "items", :id => item.id, :anchor => "#{plugin.model_name.human(:count => :other)}") do %>
				<%= icon(:file) %>
				<%= "#{files_count} #{plugin.model_name.human(:count => files_count)}" %>
			<% end %>			
		<% end %>
	</div>
<% end %>
