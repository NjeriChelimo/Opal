<div>
	<div class="header">
		<div class="title">
			<h2 class="title"><%= t("label.currently_logged_in") %></h2>
		</div>
	</div>
	<div class="logged-in-users">
		<% for user in User.logged_in %>
			<% if !user.last_request_at.blank? %>
				<div class="user">
					<table cellpadding=0 cellspacing=0>
						<tr>
							<td class="icon">
								<%= user_avatar(user, :class => "tiny") %>								
							</td>
							<td class="right">
								<h3><b><%= link_to user.username, {:action => "user", :controller => "browse", :id => user.id} %></b></h3>
								<%= User.human_attribute_name(:last_request_at) %>: <i><%= friendly_date user.last_request_at if  user.last_request_at %></i>
							</td>
						</tr>
					</table>
				</div>
			<% end %>					
		<% end %>	
	</div>		
</div>